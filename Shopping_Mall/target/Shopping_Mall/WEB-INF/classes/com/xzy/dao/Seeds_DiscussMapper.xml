<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xzy.dao.Seeds_DiscussMapper">
    <select id="sortLikes" parameterType="int" resultType="com.xzy.pojo.Seeds_Discuss">
        select * from seeds_discuss where seeds_Id=#{seeds_Id} order by likes desc ;
    </select>
    <select id="getUser" parameterType="int" resultType="com.xzy.pojo.User">
        select * from user where user_Id=(select user_Id from seeds_discuss where seeds_DiscussId=#{seeds_DisucssId});
    </select>
    <select id="getMore" parameterType="int" resultType="com.xzy.pojo.Seeds_Discuss">
        select * from seeds_discuss where seeds_DiscussId=#{seeds_DiscussId};
    </select>

</mapper>