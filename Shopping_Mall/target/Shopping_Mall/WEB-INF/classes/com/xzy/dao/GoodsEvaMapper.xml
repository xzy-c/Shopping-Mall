<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xzy.dao.GoodsEvaMapper">
  <resultMap id="BaseResultMap" type="com.xzy.pojo.GoodsEva">
    <constructor>
      <arg column="goods_Eva_Id" javaType="java.lang.Integer" jdbcType="INTEGER" />
      <arg column="user_Id" javaType="java.lang.Integer" jdbcType="INTEGER" />
      <arg column="goods_Id" javaType="java.lang.Integer" jdbcType="INTEGER" />
      <arg column="goods_Eva_Mas" javaType="java.lang.String" jdbcType="VARCHAR" />
    </constructor>
  </resultMap>

  <resultMap id="UserInfo" type="com.xzy.vo.UserInfo">
    <result column="user_Id" property="userId" />
    <result column="user_Name" property="username" />
    <result column="user_Pic" property="avatar" />
  </resultMap>

  <resultMap id="Reply" type="com.xzy.vo.ReplyVo">
    <result column="user_Id" property="userId" />
    <result column="user_Name" property="username" />
    <result column="user_Pic" property="avatar" />
    <result column="goods_Eva_Detal" property="reply" />
    <result column="goods_Eva_Pic" property="imagePath" />
  </resultMap>

  <insert id="insert" parameterType="com.xzy.pojo.GoodsEva">
    insert into goods_eva (goods_Eva_Id, user_Id, goods_Id, 
      goods_Eva_Mas)
    values (#{goodsEvaId,jdbcType=INTEGER}, #{userId,jdbcType=INTEGER}, #{goodsId,jdbcType=INTEGER}, 
      #{goodsEvaMas,jdbcType=VARCHAR})
  </insert>
  <insert id="insertSelective" parameterType="com.xzy.pojo.GoodsEva">
    insert into goods_eva
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="goodsEvaId != null">
        goods_Eva_Id,
      </if>
      <if test="userId != null">
        user_Id,
      </if>
      <if test="goodsId != null">
        goods_Id,
      </if>
      <if test="goodsEvaMas != null">
        goods_Eva_Mas,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="goodsEvaId != null">
        #{goodsEvaId,jdbcType=INTEGER},
      </if>
      <if test="userId != null">
        #{userId,jdbcType=INTEGER},
      </if>
      <if test="goodsId != null">
        #{goodsId,jdbcType=INTEGER},
      </if>
      <if test="goodsEvaMas != null">
        #{goodsEvaMas,jdbcType=VARCHAR},
      </if>
    </trim>
  </insert>

  <insert id="addReply" parameterType="map">
    insert into
    goods_evah (goods_Eva_Id, goods_Eva_Detal, goods_Eva_Pic, user_Id)
    values
    (#{goodsEvaId},#{content},#{imagePath},#{userId})
  </insert>

  <select id="getCommentList" parameterType="integer" resultMap="BaseResultMap" resultType="list">
    select goods_Eva_Id, user_Id, goods_Id,
      goods_Eva_Mas from
      goods_eva
      where goods_Id = #{goodsId}
  </select>

  <select id="getUserInfo" parameterType="integer" resultMap="UserInfo" resultType="com.xzy.vo.UserInfo">
    select user_Id,user_Name,user_Pic
    from user
    where user_Id = #{userId}
  </select>

  <select id="getReplyNum" resultType="int" parameterType="integer">
    select count(1)
    from goods_evah
    where goods_Eva_Id = #{goodsEvaId}
  </select>

  <select id="getReply" parameterType="integer" resultMap="Reply" resultType="list">
    select user.user_Id,user.user_Name,user.user_Pic,
    goods_evah.goods_Eva_Detal, goods_evah.goods_Eva_Pic
    from user,goods_evah
    where goods_evah.goods_Eva_Id = #{goodsEvaId}
    and user.user_Id = goods_evah.user_Id
  </select>
</mapper>