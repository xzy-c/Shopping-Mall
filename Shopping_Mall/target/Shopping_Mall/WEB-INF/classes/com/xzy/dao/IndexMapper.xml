<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xzy.dao.IndexMapper">
    <select id="getCover" parameterType="int" resultType="String">
        select path from seeds_rotation where seeds_Id=#{seeds_Id} order by sort limit 1;
    </select>
    <select id="sortLikes" resultType="com.xzy.pojo.Seeds">
        select * from seeds order by likes desc ;
    </select>
    <select id="getUser" parameterType="int" resultType="com.xzy.pojo.User">
        select * from user where user_Id=(select user_Id from seeds where seeds_Id=#{seeds_Id});
</select>
    <select id="getTitle" parameterType="int" resultType="com.xzy.pojo.Seeds">
        select * from seeds where seeds_Id=#{seeds_Id};
    </select>

</mapper>