<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xzy.dao.GoodsMapper">
  <resultMap id="BaseResultMap" type="com.xzy.pojo.Goods">
    <constructor>
      <arg column="goods_Id" javaType="java.lang.Integer" jdbcType="INTEGER" />
      <arg column="Small_Cate_ID" javaType="java.lang.Integer" jdbcType="INTEGER" />
      <arg column="goodsName" javaType="java.lang.String" jdbcType="VARCHAR" />
      <arg column="unitPrice" javaType="java.lang.Float" jdbcType="REAL" />
      <arg column="commentsNumber" javaType="java.lang.Integer" jdbcType="INTEGER" />
      <arg column="picture" javaType="java.lang.String" jdbcType="VARCHAR" />
      <arg column="descr" javaType="java.lang.String" jdbcType="VARCHAR" />
    </constructor>
  </resultMap>

  <resultMap id="ShopGoodsForm" type="com.xzy.vo.ShopGoodsForm">
    <result column="shop_Id" property="shopId" />
    <result column="goods_Id" property="goodsId" />
    <result column="stock" property="stock" />
    <result column="volume" property="volume" />
  </resultMap>

  <insert id="insert" parameterType="com.xzy.pojo.Goods">
    insert into Goods (goods_Id, Small_Cate_ID, goodsName, 
      unitPrice, commentsNumber, picture, 
      descr)
    values (#{goodsId,jdbcType=INTEGER}, #{smallCateId,jdbcType=INTEGER}, #{goodsname,jdbcType=VARCHAR}, 
      #{unitprice,jdbcType=REAL}, #{commentsnumber,jdbcType=INTEGER}, #{picture,jdbcType=VARCHAR}, 
      #{descr,jdbcType=VARCHAR})
  </insert>
  <insert id="insertSelective" parameterType="com.xzy.pojo.Goods">
    insert into Goods
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="goodsId != null">
        goods_Id,
      </if>
      <if test="smallCateId != null">
        Small_Cate_ID,
      </if>
      <if test="goodsname != null">
        goodsName,
      </if>
      <if test="unitprice != null">
        unitPrice,
      </if>
      <if test="commentsnumber != null">
        commentsNumber,
      </if>
      <if test="picture != null">
        picture,
      </if>
      <if test="descr != null">
        descr,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="goodsId != null">
        #{goodsId,jdbcType=INTEGER},
      </if>
      <if test="smallCateId != null">
        #{smallCateId,jdbcType=INTEGER},
      </if>
      <if test="goodsname != null">
        #{goodsname,jdbcType=VARCHAR},
      </if>
      <if test="unitprice != null">
        #{unitprice,jdbcType=REAL},
      </if>
      <if test="commentsnumber != null">
        #{commentsnumber,jdbcType=INTEGER},
      </if>
      <if test="picture != null">
        #{picture,jdbcType=VARCHAR},
      </if>
      <if test="descr != null">
        #{descr,jdbcType=VARCHAR},
      </if>
    </trim>
  </insert>
  <select id="getGoods" parameterType="integer" resultMap="BaseResultMap">
    select goods_Id, Small_Cate_ID, goodsName,
      unitPrice, commentsNumber, picture,
      descr
    from Goods
    where goods_Id = #{goodId}
  </select>

  <select id="getLoveGoodsNum" parameterType="integer" resultType="int">
    select count(1)
    from love_Goods
    where goods_Id = #{goodId}
  </select>

  <select id="getShopGoodsForm" resultMap="ShopGoodsForm" parameterType="integer">
    select shop_Id,goods_Id,stock,volume from
    shopGoods_Form
    where goods_Id = #{goodId}
  </select>

  <insert id="loveGoods" parameterType="map">
    insert into
    love_Goods (user_Id, goods_Id)
    values (#{userId},#{goodId})
  </insert>
</mapper>